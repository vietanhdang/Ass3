@page
@model Ass3.Pages.RegisterModel
@{
}
<div class="text-left">
    <h3 class="display-6">Register Form</h3>

    <form method="post" class="w-50 mt-4">
        <div class="form-group">
            <label asp-for="AppUser.Fullname" class="control-label"></label>
            <input asp-for="AppUser.Fullname" class="form-control" />
            <span asp-validation-for="AppUser.Fullname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AppUser.Address" class="control-label"></label>
            <input asp-for="AppUser.Address" class="form-control" />
            <span asp-validation-for="AppUser.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AppUser.Email" class="control-label"></label>
            <input asp-for="AppUser.Email" class="form-control" />
            <span asp-validation-for="AppUser.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AppUser.Password" class="control-label"></label>
            <input asp-for="AppUser.Password" class="form-control" />
            <span asp-validation-for="AppUser.Password" class="text-danger"></span>
        </div>
        <div class="form-group my-3">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

        <div class="form-group">
            <a asp-page="/Login">Login</a>
        </div>
    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}